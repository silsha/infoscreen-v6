      <div data-id="status" data-view="HotStatus" data-title="Raumstatus" data-text="Raumstatus"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="Kontostand" data-view="Number" data-title="Kontostand" data-prefix="€"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="Payback_Punkte" data-view="Number" data-title="Payback"></div>
    </li>

    <li data-row="2" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="Temperatur_Beamerplattform" data-view="Graph" data-title="Temperatur" data-suffix="°C"></div>
    </li>

    <li data-row="1" data-col="5" data-sizex="2" data-sizey="1">
      <div data-id="rnv" data-view="List" data-unordered="true" data-title="ÖPNV" data-moreinfo="Haltestelle Boveristraße"></div>
    </li>

    <li data-row="2" data-col="4" data-sizex="1" data-sizey="1">
